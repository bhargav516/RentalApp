<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RentActivity"
    tools:showIn="@layout/app_bar_rent">

    <TextView
        android:id="@+id/dueHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Due April 30th 2019"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dueHeader">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/baseRentHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/base_rent"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/baseRentValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/textWhite" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/waterHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/water"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/waterValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/textWhite" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/trashHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/trash"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/trashValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/textWhite" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/electricityHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/electricity"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/electricityValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/textWhite" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/internetHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/internet"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/internetValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@color/textWhite" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/totalHeader"
                android:layout_column="1"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/total"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/totalValue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:gravity="end"
                android:text="$0"
                android:textColor="@color/textWhite"
                android:textSize="14dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/payNowButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/round_edges"
        android:drawableStart="@drawable/ic_payment_black"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
        android:text="@string/pay_now"
        android:textColor="@color/textBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/youPayHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="48dp"
        android:text="@string/you_pay"
        android:textAlignment="viewStart"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/payNowButton"
        app:layout_constraintEnd_toStartOf="@+id/youPayValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/youPayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:text="$0"
        android:textAlignment="viewEnd"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/youPayHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/youPayHeader"
        app:layout_constraintTop_toTopOf="@+id/youPayHeader" />

    <android.support.constraint.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>