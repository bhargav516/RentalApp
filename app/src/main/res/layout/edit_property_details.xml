<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_property_toolbar"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#212121"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/edit_property_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/edit_property_image"
        android:layout_width="413dp"
        android:layout_height="196dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="29dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/edit_property_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_toolbar"
        app:srcCompat="@drawable/add_photo_alternate_white_48dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="104dp"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_image"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="@+id/edit_property_image" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Property Policies"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Property Notes"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edit_property_name"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="241dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/edit_property_street"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="238dp"
        android:layout_height="36dp"
        android:ems="10"
        android:hint="Street"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_property_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_name" />

    <EditText
        android:id="@+id/edit_property_policy"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="232dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:hint="Policy"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/edit_property_add_policy"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_property_note"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="230dp"
        android:layout_height="33dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:hint="Note"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/edit_property_add_note"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/edit_property_add_note"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_add_white"
        android:baselineAlignBottom="false"
        app:layout_constraintBottom_toBottomOf="@+id/edit_property_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_property_note"
        app:layout_constraintTop_toTopOf="@+id/edit_property_note"
        app:srcCompat="@drawable/ic_add_white"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/edit_property_add_policy"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="16dp"

        android:background="@drawable/ic_add_white"
        android:baselineAlignBottom="false"
        app:layout_constraintBottom_toBottomOf="@+id/edit_property_policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_property_policy"
        app:layout_constraintTop_toTopOf="@+id/edit_property_policy"
        app:srcCompat="@drawable/ic_add_white"
        tools:ignore="VectorDrawableCompat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edit_property_details_policies_recycler_view"
        android:layout_width="250dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_property_note"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_add_policy"
        app:layout_constraintStart_toStartOf="@+id/edit_property_policy"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_policy" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edit_property_details_notes_recycler_view"
        android:layout_width="255dp"
        android:layout_height="104dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_add_note"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_property_note"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_note" />

    <EditText
        android:id="@+id/edit_property_csz"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_width="239dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="City/State/Zip Code"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_property_policy"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_street"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_property_street"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_street"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>